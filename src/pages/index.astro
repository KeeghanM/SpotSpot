---
import MainLayout from '@/layouts/main-layout.astro'
import { Button } from '@/components/ui/button'
---

<MainLayout title="SpotSpot - Track and Discover Places">
  <div class="mx-auto px-4 py-8 md:py-16">
    <!-- Hero Section -->
    <section
      class="flex flex-col-reverse items-center gap-8 md:flex-row md:justify-between"
    >
      <div class="md:max-w-[50%]">
        <h1
          class="text-4xl font-bold tracking-tight md:text-5xl lg:text-6xl"
        >
          Track, rate, and discover your favorite spots
        </h1>
        <p
          class="text-muted-foreground mt-4 text-xl md:text-2xl"
        >
          Your personal logbook for all the places you want
          to visit and have experienced.
        </p>
        <div class="mt-8 flex flex-col gap-4 sm:flex-row">
          <Button
            asChild
            size="lg"
            className="font-medium"
          >
            <a href="/register">Create your account</a>
          </Button>
          <Button
            asChild
            variant="outline"
            size="lg"
            className="font-medium"
          >
            <a href="/login">Sign in</a>
          </Button>
        </div>
      </div>
      <div class="w-full max-w-md md:w-[45%]">
        <div
          class="from-primary/80 to-primary flex aspect-square items-center justify-center rounded-lg bg-gradient-to-br shadow-xl"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="120"
            height="120"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-white"
          >
            <path
              d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
            ></path>
            <circle
              cx="12"
              cy="10"
              r="3"
            ></circle>
          </svg>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="mt-16 md:mt-24">
      <h2
        class="text-center text-3xl font-bold md:text-4xl"
      >
        How SpotSpot Works
      </h2>
      <div class="mt-8 grid gap-8 md:grid-cols-3">
        <div
          class="bg-card rounded-lg border p-6 shadow-sm"
        >
          <div
            class="bg-primary/10 mb-4 flex h-12 w-12 items-center justify-center rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
            >
              <path d="M12 3v12"></path>
              <path d="M6 9h12"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold">
            Add Your Spots
          </h3>
          <p class="text-muted-foreground mt-2">
            Create personalized lists of places you've been
            to or want to visit. Add restaurants, caf√©s,
            tourist attractions, parks, anything you want!
          </p>
        </div>
        <div
          class="bg-card rounded-lg border p-6 shadow-sm"
        >
          <div
            class="bg-primary/10 mb-4 flex h-12 w-12 items-center justify-center rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
            >
              <path d="M2 12h5"></path>
              <path d="M17 12h5"></path>
              <path d="M9 6v12"></path>
              <path d="M15 6v12"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold">
            Organize & Tag
          </h3>
          <p class="text-muted-foreground mt-2">
            Categorize your spots with custom tags and
            filter them based on location, type, or personal
            preferences. Keep everything organized in one
            place.
          </p>
        </div>
        <div
          class="bg-card rounded-lg border p-6 shadow-sm"
        >
          <div
            class="bg-primary/10 mb-4 flex h-12 w-12 items-center justify-center rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
            >
              <path d="M12 2v20"></path>
              <path d="m17 5-5-3-5 3"></path>
              <path d="m17 19-5 3-5-3"></path>
              <path d="M2 12h20"></path>
              <path d="m5 7-3 5 3 5"></path>
              <path d="m19 7 3 5-3 5"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold">
            Rate & Discover
          </h3>
          <p class="text-muted-foreground mt-2">
            Rate places you've visited and discover new
            recommendations based on your preferences. Share
            your favorites with friends.
          </p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section
      class="bg-muted mt-16 rounded-xl p-8 text-center md:mt-24 md:p-12"
    >
      <h2 class="text-3xl font-bold md:text-4xl">
        Ready to start tracking?
      </h2>
      <p
        class="text-muted-foreground mx-auto mt-4 max-w-2xl text-lg"
      >
        Join SpotSpot today and never lose track of your
        favorite places again. Create your personalized map
        of memories and discoveries.
      </p>
      <Button
        asChild
        size="lg"
        className="mt-8 font-medium"
      >
        <a href="/register">Get Started for Free</a>
      </Button>
    </section>
  </div>
</MainLayout>
