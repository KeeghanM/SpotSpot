{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        ".expo/**"
      ]
    },
    "dev": { "cache": false, "persistent": true },
    "lint": { "dependsOn": ["^build"] },
    "lint:fix": { "cache": false },
    "type-check": { "dependsOn": ["^build"] },
    "test": { "dependsOn": ["^build"] },
    "test:watch": { "cache": false, "persistent": true },
    "clean": { "cache": false }
  }
}
