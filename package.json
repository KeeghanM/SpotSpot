{
  "name": "spotspot",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=website",
    "dev:native": "turbo run dev --filter=native-app",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=website",
    "build:native": "turbo run build --filter=native-app",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "npx turbo run clean && rmdir /s /q node_modules || echo \"node_modules not found\"",
    "fresh": "yarn clean && yarn install",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,astro}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,astro}\"",
    "expo": "cd apps/native-app && expo",
    "expo:start": "cd apps/native-app && expo start",
    "expo:android": "cd apps/native-app && expo start --android",
    "expo:ios": "cd apps/native-app && expo start --ios",
    "expo:web": "cd apps/native-app && expo start --web"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
